    <link rel="shortcut icon" type="image/x-icon" href="assets\img\logo-KTT1.ico">

    <title>Quản lý sản phẩm nước hoa</title>

    <!-- Custom fonts for this template-->
    <link href="AdminQL/HomeAdminQL/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="AdminQL/HomeAdminQL/css/sb-admin-2.min.css" rel="stylesheet">
    
    <!-- Latest compiled and minified CSS -->

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- Ví dụ với thư viện sweetalert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        .pagination-container {
          display: flex;
          justify-content: center;
          margin-top: 50px;
        }
      
        .pagination {
          list-style: none;
          padding: 0;
          display: flex;
          justify-content: center;
          align-items: center;
        }
      
      </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("../../partials/danhMuc.ejs") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form action="/##" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" id="search-ben-admin">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm nước hoa đi sếp..." name="search_ben_admin"
                                aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <%- include("../../partials/topAccount.ejs") %>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Quản lý sản phẩm nước hoa</h1>     
                        <a href="/create-sp-nuochoa" class="btn btn-primary">Thêm sản phẩm</a>                   
                    </div> 
                    
                    <!-- Content Row -->
                    <div class="row">
                    
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Earnings (Monthly)</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">$40,000</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Earnings (Annual)</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">$215,000</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Tasks
                                            </div>
                                            <div class="row no-gutters align-items-center">
                                                <div class="col-auto">
                                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">50%</div>
                                                </div>
                                                <div class="col">
                                                    <div class="progress progress-sm mr-2">
                                                        <div class="progress-bar bg-info" role="progressbar"
                                                            style="width: 50%" aria-valuenow="50" aria-valuemin="0"
                                                            aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                
                        <!-- Pending Requests Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Pending Requests</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">18</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <!-- Content Row -->

                    <!-- Content Row -->
                    <div class="row">
                        <table class="table table-hover">
                            <thead>                                
                                <tr style="background-color: #DC143C; color: white; font-size: 18px; ">
                                    <th style="text-align: center; vertical-align: middle;">Hình Ảnh</th>
                                    <th style="width: 150px;text-align: center; vertical-align: middle;">Tên SP</th>
                                    <th style="text-align: center; vertical-align: middle;">Giá mới</th>
                                    <th style="text-align: center; vertical-align: middle;">Giá cũ</th>
                                    <th style="text-align: center; vertical-align: middle;">Loại SP</th>
                                    <th style="text-align: center; vertical-align: middle;">Nam/Nữ</th>
                                    <th style="text-align: center; vertical-align: middle;">New/Hot</th>
                                    <th style="text-align: center; vertical-align: middle;">Mới/Nổi Bật</th>
                                    <th style="width: 270px; text-align: center; vertical-align: middle; ">Mô tả</th>                                    
                                    <th style="text-align: center; vertical-align: middle;">Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>   
                                <!-- Hiển thị all sản phẩm - end -->  
                                <% all.forEach(function(allsp, index) { %>                                                       
                                <tr style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
                                    <td style="text-align: center; vertical-align: middle;  width: 150px;">
                                        <img  src="images/upload/<%= getRelativeImagePath(allsp.Image) %>" class="img-fluid" alt="Image">
                                    </td>                                                                                                                                                                                                                                                                                                                       
                                    <td><%= allsp.TenSP %></td>
                                    <td><%= formatCurrency(allsp.GiaBan) %></td>                                  
                                    <td><%= formatCurrency(allsp.GiaCu) %></td>                                                                                                                                                                                                                                                                                                                        
                                    <td><%= allsp.IdLoaiSP.TenLoaiSP %></td>                                                                                                                                                                                                                                                                                                                        
                                    <td><%= allsp.IdNam_Nu.TenLoaiNamNu %></td>                                                                                                                                                                                                                                                                                                                        
                                    <td><%= allsp.New_Hot %></td>                                                                                                                                                                                                                                                                                                                        
                                    <td><%= allsp.SpMoi_SpNoiBat %></td>                                                                                                                                                                                                                                                                                                                        
                                    <td><%= convertHtml(allsp.MoTa) %></td>                                                                                                                                                                                                                                                                                                                        
                                    <td style="text-align: center; vertical-align: middle;">
                                        <a 
                                            class="btn btn-success button-SUA-XOA" 
                                            href="##">Edit</a>   
                                                        
                                        <a                                                
                                            id="deleteButton" 
                                            class="btn btn-danger" 
                                            onclick="deleteUser('')"
                                        >Delete</a>                                                
                                    </td>                                  
                                </tr>
                                <% }); %>                                         
                                <!-- Hiển thị all sản phẩm - end -->   
                            </tbody>
                        </table>                       
                    </div>

                </div>
                <!-- /.container-fluid -->

                <!-- đoạn này phân trang -->
                <div class="pagination-container">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                        <% 
                          const pre = curPage <= 1 ? curPage : curPage - 1; 
                          const next = curPage >= soTrang ? curPage : parseInt(curPage) + 1            
                        %>
                            <li class="page-item">
                                <a class="page-link" style=" font-weight: bolder;" href="/page-qly-nuoc-hoa?page=<%=pre%>">
                                    &lt;
                                </a>
                            </li>
                        <% for(var i=1; i <=soTrang; i++) { 
                            var active="" ; 
                            if(i == curPage) active="active" ; %>
                            <li class="page-item <%=active%>">
                                <a class="page-link" style="font-size: 18px; font-weight: bolder;"  href="/page-qly-nuoc-hoa?page=<%=i%>">
                                    <%=i%>                          
                                </a>
                            </li>                
                        <% } %>                                                      
                            <li class="page-item">
                                <a class="page-link" style=" font-weight: bolder;" href="/page-qly-nuoc-hoa?page=<%=next%>">
                                    &gt;
                                </a>
                            </li>                     
                        </ul>
                    </nav>
                </div> 
                <!-- đoạn này phân trang - end -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>WebShop &copy; Khắc Tú</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bạn có chắc chắn muốn đăng xuất không?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Ấn vào "Logout" để xác nhận đăng xuất.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/login-admin">Logout</a>
                </div>
            </div>
        </div>
    </div>
    

    <!-- Bootstrap core JavaScript-->
    <script src="AdminQL/HomeAdminQL/vendor/jquery/jquery.min.js"></script>
    <script src="AdminQL/HomeAdminQL/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="AdminQL/HomeAdminQL/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="AdminQL/HomeAdminQL/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="AdminQL/HomeAdminQL/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="AdminQL/HomeAdminQL/js/demo/chart-area-demo.js"></script>
    <script src="AdminQL/HomeAdminQL/js/demo/chart-pie-demo.js"></script>

    <script src="assets\js\hamDinhDangTien_VaLinkAnh.js"></script>

    
</body>

