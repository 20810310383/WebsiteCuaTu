    </div>

    <nav aria-label="...">
        <ul style="font-size: 25px;" class="pagination">

            <% 
                const pre = curPage <= 1 ? curPage : curPage - 1; 
                const next = curPage >= soTrang ? curPage : parseInt(curPage) + 1            
            %>  
            <li class="page-item disabled">
              <a class="page-link" href="/shop-list-ht2?page=<%=pre%>">&laquo;</a>
            </li>

           <% for(var i=1; i <=soTrang; i++) { 
                        var active="" ; 
                        if(i == curPage) active="active" ; %>
        
            <li class="<%=active%> page-item " aria-current="page">
                <a  class="page-link" href="/shop-list-ht2?page=<%=i%>">
                    <%=i%>                          
                </a>
            </li>
        
            <% } %>

            <li class="page-item">
                <a class="page-link" href="/shop-list-ht2?page=<%=next%>">&raquo;</a>
            </li>
          
        </ul>
    </nav>

