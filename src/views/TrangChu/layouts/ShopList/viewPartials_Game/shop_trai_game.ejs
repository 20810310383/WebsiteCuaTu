<div class="tab-pane fade show active" id="large" role="tabpanel">
    <div class="row">
        <% if (all && all.length > 0) { %>
            <% all.forEach(function(all) { %>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="single_product">
                <form id="form-addtocart-new" action="/addtocart?productId=<%= all._id %>" method="POST">
                    <div class="product_thumb">
                        <a href="/detailt-sp-ht2?idDetailtSP_ht2=<%= all._id %>"><img height="344.05px" src="images/upload/<%= getRelativeImagePath(all.Image) %>" alt=""></a> 
                        <% if (all.New_Hot === "New") { %>
                            <div class="img_icone">
                                <img src="assets\img\cart\span-new.png" alt="">
                            </div>
                            <% } else { %> 
                            <div class="hot_img">
                                <img src="assets\img\cart\span-hot.png" alt="">
                            </div>
                            <% } %> 
                    <div class="product_action">
                        <!-- <a href="/detailt-sp-ht2?idDetailtSP_ht2=<%= all._id %>"> <i class="fa fa-shopping-cart"></i> Add to cart</a> -->
                        <button type="submit" style="cursor: pointer;" class="btn-addtocart">
                            <i class="fa fa-shopping-cart"></i> Add to cart
                        </button>
                        
                        <!-- <a href="#"> <i class="fa fa-eye"></i> &ensp; View Detail</a> -->
                        <input value="1" type="hidden" name="quantity" data-product-id="<%= all._id %>">
                    </div>
                    </div>
                    <div class="product_content">
                        <span class="product_price" style="color: red;"><%= formatCurrency(all.GiaBan) %></span>
                        <h3 class="product_title"><a style="font-size: 18px ;font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" href="/detailt-sp-ht2?idDetailtSP_ht2=<%= all._id %>"><%= all.TenSP %></a></h3>
                    </div>
                    <div class="product_info">
                        <ul>
                            <li><a href="#" title=" Add to Wishlist ">Add to Wishlist</a></li>
                            <li><a href="#" data-toggle="modal" data-target="#modal_box" title="Quick view">View Detail</a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
        <% }); %> 
        <% } else { %> 
            <p>Admin chưa update sản phẩm</p>
        <% } %>
    </div>  
</div>