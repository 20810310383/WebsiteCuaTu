<!-- kiểu 1 -- có 4 sản phẩm 1 dòng -->
<div class="new_product_area product_two">
    <div class="row">
        <div class="col-12">
            <div class="block_title">
            <h3 style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: navy;">Sản Phẩm Mới</h3>
        </div>
        </div> 
    </div>
    <div class="row">
        <% if (spNew && spNew.length > 0) { %>
        <div class="single_p_active owl-carousel">
            <% spNew.forEach(function(spNew) { %>
            <div class="col-lg-3">
                <form id="form-addtocart-new" action="/addtocart?productId=<%= spNew._id %>" method="POST">
                    <div class="single_product">
                        <div class="product_thumb">
                        <a href="/detailt-sp-ht2?idDetailtSP_ht2=<%= spNew._id %>"><img height="334px" src="images/upload/<%= getRelativeImagePath(spNew.Image) %>" alt=""></a> 

                            <% if (spNew.New_Hot === "New") { %>
                            <div class="img_icone">
                                <img src="assets\img\cart\span-new.png" alt="">
                            </div>
                            <% } else { %> 
                            <div class="hot_img">
                                <img src="assets\img\cart\span-hot.png" alt="">
                            </div>
                            <% } %>  

                        <div class="product_action">
                            <button type="submit" style="cursor: pointer;" class="btn-addtocart">
                                <i class="fa fa-shopping-cart"></i> Add to cart
                            </button>
                            <input value="1" type="hidden" name="quantity" data-product-id="<%= spNew._id %>">
                            <input value="S" type="hidden" name="size" >
                        </div>
                        </div>
                        <div class="product_content">
                            <span class="product_price" style="color: red;"><%= formatCurrency(spNew.GiaBan) %></span>
                            <h3 class="product_title"><a style="font-size: 18px ;font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" href="/detailt-sp-ht2?idDetailtSP_ht2=<%= spNew._id %>"><%= spNew.TenSP %></a></h3>
                        </div>
                        <div class="product_info">
                            <ul>
                                <li><a href="#" title=" Add to Wishlist ">Add to Wishlist</a></li>
                                <li><a href="#" data-toggle="modal" data-target="#modal_box" title="Quick view">View Detail</a></li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>           
            <% }); %> 
        </div> 
        <% } else { %> 
            <p>Admin chưa update sản phẩm</p>
        <% } %>
    </div>      
</div> 